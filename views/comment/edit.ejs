<%- include("../partials/header") %>

<div class = "container text-center">
	<h1>
	Edit Comment
	</h1>
	<div class = "row" style = "width: 30%; margin: 0 auto;">
		<form action = '/campgrounds/<%= campground %>/comment/<%= element._id %>?_method=PUT' method = 'POST'>
			<div class = "form-group">
				<input class = "form-control" type = 'text' name = "comment[text]" placeholder = 'comment' value = "<%= element.text %>">
			</div>
				<div class = "form-group">
					<input type = "radio" name = "ratingstar" id = "onee" value = "1">
					<input type = "radio" name = "ratingstar" id = "twoe" value = "2">
					<input type = "radio" name = "ratingstar" id = "threee" value = "3">
					<input type = "radio" name = "ratingstar" id = "foure" value = "4">
					<input type = "radio" name = "ratingstar" id = "fivee" value = "5">
				</div>
			<div class = "form-group">
				<button class = "btn btn-lg btn-primary btn-block">
					Submit
				</button>				
			</div>
			



		</form>		
	</div>

	<a href = "/campgrounds">Camping Page</a>
	</div>


<%- include("../partials/footer") %>
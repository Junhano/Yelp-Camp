<%- include("../partials/header") %>

<div class = "container text-center">
	<h1>
	Create a New Comment for <%= element.name%>
	</h1>
	<div class = "row" style = "width: 30%; margin: 0 auto;">
		<form action = '/campgrounds/<%= element._id %>/comment' method = 'POST'>
			<div class = "form-group">
				<input class = "form-control" type = 'text' name = "comment" placeholder = 'comment'>
			</div>
			<div class = "form-group">
				<input type = "radio" name = "ratingstar" id = "one" value = "1">
				<input type = "radio" name = "ratingstar" id = "two" value = "2">
				<input type = "radio" name = "ratingstar" id = "three" value = "3">
				<input type = "radio" name = "ratingstar" id = "four" value = "4">
				<input type = "radio" name = "ratingstar" id = "five" value = "5">
			</div>
			<div class = "form-group">
				<button class = "btn btn-lg btn-primary btn-block">
					Submit
				</button>				
			</div>
			



		</form>		
	</div>

	<a href = "/campgrounds">Camping Page</a>
	</div>


<%- include("../partials/footer") %>
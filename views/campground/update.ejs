<%- include("../partials/header") %>

<div class = "container text-center">
	<h1>
	Update New Campground
	</h1>
	<div class = "row" style = "width: 30%; margin: 0 auto;">
		<form action = '/campgrounds/<%= element._id %>?_method=PUT'method = 'POST'>
			<div class = "form-group">
				<input class = "form-control" type = 'text' name = "campground[name]" placeholder = 'name' value = '<%= element.name %>'>
			</div>
				
			<div class = "form-group">
				<input class = "form-control" type = 'text' name = "campground[image]" placeholder = "image url" value = '<%= element.image %>'>
			</div>
			<div class = "form-group">
				<input class = "form-control" type = 'number' name = "campground[price]" placeholder = "price" value = '<%= element.price %>' min = '0.00' step = '0.01'>
			</div>
			
			<div class = "form-group">
				<input class = "form-control" type = 'text' name = "campground[description]" placeholder = "description" value = '<%= element.description %>'>
			</div>
						
			<div class = "form-group">
				<button class = "btn btn-lg btn-primary btn-block">
					Submit
				</button>				
			</div>
			



		</form>		
	</div>

	<a href = "/campgrounds">Camping Page</a>
	</div>


<%- include("../partials/footer") %>